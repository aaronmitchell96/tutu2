<!-- navbar.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Navbar</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="navbar">
        <button class="hamburger" onclick="toggleMenu()">&#9776;</button>
        <div class="navbar-links" id="navbarLinks">
            <a href="/" class="<%= activePage === 'home' ? 'active' : '' %>">Home</a>
            <a href="/gallery" class="<%= activePage === 'gallery' ? 'active' : '' %>">Gallery</a>
            <% if (user) { %>
                <% if (user.role === 'admin') { %>
                    <a href="/upload" class="<%= activePage === 'upload' ? 'active' : '' %>">Upload</a>
                <% } %>
                <span class="navbar-username">Welcome, <%= user.username %>!</span>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/login" class="<%= activePage === 'login' ? 'active' : '' %>">Login</a>
            <% } %>
        </div>
    </div>

    <script>
        function toggleMenu() {
            var navbarLinks = document.getElementById("navbarLinks");
            var content = document.querySelector(".main-content");
            navbarLinks.classList.toggle("show");
            content.classList.toggle("blur");
        }
    </script>
</body>
</html>
